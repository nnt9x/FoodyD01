<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_food_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/item_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_food_image"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="#CD3131"
        app:layout_constraintLeft_toRightOf="@id/item_food_image"
        android:text="Food"/>

    <TextView
        android:id="@+id/item_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_food_image"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/item_food_image"
        android:text="30000"/>



</androidx.constraintlayout.widget.ConstraintLayout>